<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="facebook" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:drawableLeft">@drawable/facebookf</item>
        <item name="android:drawableRight">@drawable/right_arrow2</item>
    </style>
    <style name="googl_plus" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:drawableLeft">@drawable/google_plusf</item>
        <item name="android:drawableRight">@drawable/right_arrow2</item>
    </style>
    <style name="twitter" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:drawableLeft">@drawable/twitterf</item>
        <item name="android:drawableRight">@drawable/right_arrow2</item>
    </style>

    <style name="add" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:drawableLeft">@drawable/add3</item>
        <item name="android:drawableRight">@drawable/right_arrow2</item>
    </style>
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#F44336</item>
        <item name="fab_colorPressed">#F44336</item>
        <item name="fab_colorRipple">#F44336 </item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>
</resources>
