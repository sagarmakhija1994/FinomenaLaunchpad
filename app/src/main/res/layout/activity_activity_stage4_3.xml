<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sagarmakhija1994gmail.finomenalaunchpad.activityStage4_3"
    android:id="@+id/layoutSettings">
    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Stage4_1">


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/button4_2_2"
            android:layout_gravity="left|top"
            android:background="@drawable/button_green"
            android:textSize="50dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/button4_2_4"
            android:layout_gravity="center"
            android:background="@drawable/button_green"
            android:textSize="50dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/button4_2_1"
            android:layout_gravity="right|bottom"
            android:background="@drawable/button_green"
            android:textSize="50dp"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text=""
            android:id="@+id/button4_2_3"
            android:layout_gravity="left|bottom"
            android:background="@drawable/button_green"
            android:textSize="50dp"
            android:textColor="#ffffff"/>


    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stage-1 Level-3"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textColor="#ffffff"/>

</RelativeLayout>
