<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sagarmakhija1994gmail.finomenalaunchpad.activityStage6"
    android:id="@+id/layoutSettings">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Finomena Launchpad"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>
    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Stage6"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage 2\nSelect Level"
            android:textSize="45dp"
            android:id="@+id/textView45"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:id="@+id/button61"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/button_green"
            android:onClick="button61"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:id="@+id/button62"
            android:layout_gravity="center"
            android:background="@drawable/button_green"
            android:onClick="button62"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:id="@+id/button63"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/button_green"
            android:onClick="button63"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:id="@+id/button64"
            android:layout_gravity="left|bottom"
            android:background="@drawable/button_green"
            android:onClick="button64"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:id="@+id/button65"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/button_green"
            android:onClick="button65"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:id="@+id/button66"
            android:layout_gravity="right|bottom"
            android:background="@drawable/button_green"
            android:onClick="button66"
            android:textColor="#ffffff"
            android:textSize="40dp"/>

    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="sagarmakhija1994@gmail.com"
        android:id="@+id/textView15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="V.1.0.2"
        android:id="@+id/textView16"
        android:layout_above="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>
</RelativeLayout>
